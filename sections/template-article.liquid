<h1>{{ article.title }}</h1>

{% if section.settings.enable_author %}
  <small>{{ article.author }}</small>
{% endif %}

{% if section.settings.enable_published_date %}
  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
    {{ article.published_at | date: '%Y-%m-%d' }}
  </time>
{% endif %}

<img 
  src="{{ article.image | image_url: width: 480, height: 480 }}" alt="{{ article.image.alt }}" width="auto" height="auto" class="object-cover"
/>

<div>{{ article.content }}</div>

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"
      },
      {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Published Date"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "Thumbnail",
        "limit": 1
      },
      {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      },
    ]
  }
{% endschema %}